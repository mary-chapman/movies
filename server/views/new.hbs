<form action="/movies" method="post">
  <!-- TITLE -->
  <div class="form-group">
    <label for="title" class="form-control">Title</label>
    <input class="form-control" type="text" name="title" placeholder="enter movie title" />
  </div>
  <!-- RATING -->
  <div class="form-group">
    <label for="title" class="form-control">RATING</label>
    <select class="form-control" name="rating">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <!-- DESCRIPTION -->
  <div class="form-group">
    <label for="title" class="form-control">Description</label>
    <textarea class="form-control" type="text" name="description" placeholder="enter a description"></textarea>
  </div>
  <!-- WATCHED -->
  <div class="form-group">
    Have you seen this movie?
    <label><input type="radio" name="watched" value="on">Yes</label>
    <label><input type="radio" name="watched" value="off">No</label>
  </div>
  <!-- SUBMIT BTN -->
  <button type="submit" class="btn btn-success">SUBMIT</button>
</form>
